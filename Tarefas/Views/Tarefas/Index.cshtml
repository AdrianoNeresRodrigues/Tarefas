@model IEnumerable<Tarefas.Models.Tarefa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TarefaDescricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarefaPrioridade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarefaDataCriacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarefaDataLembrete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarefaLembrete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarefaDataVencimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TarefaDataConclusao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaDescricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaPrioridade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaDataCriacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaDataLembrete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaLembrete)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaDataVencimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TarefaDataConclusao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TarefaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TarefaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TarefaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
